{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: start",
            "type": "npm",
            "script": "start",
            "isBackground": true, // Indica que la tarea se ejecuta en segundo plano
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Compiling|Watching for file changes.",
                    "endsPattern": "webpack compiled|Built in"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}